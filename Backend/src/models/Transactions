const mongoose = require("mongoose");
const { Schema } = mongoose;
const TransactionSchema = new mongoose.Schema(
  {
    transaction_id: {
      type: String,
      required: true,
      minLength: 1,
      maxLength: 50,
    },
    created_at: { type: Date, default: Date.now },
    owner_id: { type: String, required: true }, //update to reference user objectId after that's ready
    requester_id: { type: String, required: true }, //update to reference user objectId after that's ready
    listing_id: { type: String, required: true }, //update to reference user objectId after that's ready
    // owner_id: [{ type: Schema.Types.ObjectId, ref: "Auth" }]
    // requester_id: [{ type: Schema.Types.ObjectId, ref: "Auth" }]
    listing_id: [{ type: Schema.Types.ObjectId, ref: "Listing" }],
    status: {
      type: String,
      enums: [
        "pending_response",
        "accepted",
        "declined",
        "completed",
        "expired",
      ],
    },
  },
  { collection: "transactions" }
);

const Transaction = mongoose.model("Transaction", TransactionSchema);

module.exports = Transaction;
